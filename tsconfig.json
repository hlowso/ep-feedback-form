{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "sourceMap": true,
        "target": "es5",
        "strictNullChecks": true,
        "downlevelIteration": true,
        "lib": ["es2015", "es2016", "es2017", "es2018", "esnext", "dom", "esnext.array", "dom.iterable"],
        "typeRoots": [ "./src/types", "./node_modules/@types"],
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}